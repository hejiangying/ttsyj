/* pages/search/search.wxss */
.top{width: 100%;background: #f5f5f5;padding: 20rpx 0rpx;overflow: hidden}
.contain{width: 90%;margin: 0 auto;}
.contain image{width: 40rpx;height: 40rpx;display: inline-block;margin-top:6rpx;float: left;}
.contain input{width: 80%;border: 1px solid #ccc;float: left;font-size: 28rpx;background: #fff;padding: 0rpx 20rpx;box-sizing: border-box;margin: 0rpx 20rpx;}
.ans{width: 100%;height: 100%;background: #fff;position: fixed;top: 0;z-index: 999;}
.tiaojian{width: 97%;margin: 0 auto;}
.tiaojian view.tjtb{font-size: 28rpx;display: inline-block;width: 24.5%;text-align: center;border-right: 1rpx solid #ccc;border-bottom: 1rpx solid #ccc;padding: 20rpx 0rpx;border-top: 1rpx solid #ccc;}
.tiaojian view.tjtb:nth-child(4){border-right: none;}
.tiaojian view.nogoods{font-size: 28rpx;border: 1rpx dashed #ccc;border-radius: 50%;color: #ccc;margin: 0 auto;margin-top: 60rpx;width: 400rpx;height: 400rpx;display: block;line-height: 400rpx;text-align: center}
