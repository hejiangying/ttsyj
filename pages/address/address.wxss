/* pages/address/address.wxss */
.newadd{width: 100%;height: 80rpx;background: #ff6700;position: fixed;bottom: 0;color: #fff;font-size: 28rpx;text-align: center;line-height: 80rpx;}
.creatadd{display: none;position: fixed;width: 100%;height: 100%;background: white;}
.show{display: block}
.hide{display: none;}
.creatadd view {font-size: 28rpx;width: 100%;padding: 10rpx 20rpx;border-bottom: 1rpx solid #f6f6f6;}
.creatadd view text{display: inline-block;width: 28%;}
.creatadd view input{width: 68%;display: inline-block;vertical-align: middle;font-size: 24rpx;}
.creatadd view switch{margin-left: 360rpx;}
.creatadd view.save{position: absolute;bottom: 0;width: 100%;height: 80rpx;text-align: center;color: white;background: #ff6700;line-height: 80rpx;} 