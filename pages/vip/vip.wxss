/* pages/vip/vip.wxss */

.new {
  background: #eee;
  height: 100%;
  position: fixed;
}

.myvip {
  width: 100%;
  height: 160rpx;
  background: #ff6b00;
}

.myvip text {
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  display: block;
  padding-top: 20rpx;
}

.myvip image {
  width: 140rpx;
  height: 140rpx;
  border: 6rpx solid #ffd24d;
  border-radius: 50%;
  margin: 0 auto;
  display: block;
  margin-top: 20rpx;
}

.progress {
  margin-top: 100rpx;
  overflow: hidden;
  padding-bottom: 50rpx;
}

.progress .pro_item {
  width: 33%;
  float: left;
  border-right: 1rpx solid #ccc;
}

.progress .pro_item:last-child {
  border-right: none;
}

.progress .pro_item image {
  width: 46rpx;
  height: 46rpx;
  display: block;
  margin: 0 auto;
}

.progress .pro_item text {
  text-align: center;
  font-size: 24rpx;
  display: block;
}

.gray {
  width: 100%;
  height: 20rpx;
  background: #f5f5f5;
}

.list {
  padding-top: 20rpx;
}

.list .list_item {
  font-size: 28rpx;
  width: 90%;
  border-bottom: 1rpx solid #ececec;
  margin: 0 auto;
  padding: 20rpx 0rpx;
}

.list .list_item:last-child {
  border-bottom: none;
}

.list .list_item image {
  width: 20rpx;
  height: 30rpx;
  float: right;
  padding-right: 20rpx;
  margin-top: 4rpx;
}

.exit {
  width: 100%;
  background: #f5f5f5;
  padding: 20rpx 0rpx;
}

.exit button {
  width: 80%;
  background: #ddd;
  font-size: 28rpx;
  margin: 20rpx auto;
  color: #999;
}

.wsinfo {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 999;
  top: 0;
  background: rgba(0, 0, 0, 0.7);
  display: none;
}

.infocon {
  width: 80%;
  background: #fff;
  font-size: 28rpx;
  margin: 0 auto;
  margin-top: 100rpx;
}

.infocon text.name {
  background: #fe6600;
  display: block;
  text-align: center;
  padding: 15rpx 0rpx;
  color: #fff;
}

.infocon view {
  padding: 10rpx 0rpx;
}

.infocon view text {
  display: inline-block;
  width: 30%;
  text-align: right;
  vertical-align: 8rpx;
}

.infocon view input {
  width: 60%;
  display: inline-block;
  vertical-align: bottom;
  font-size: 24rpx;
  border-bottom: 1rpx solid #ccc;
}

.infocon view.btn {
  border-top: 1rpx solid #cfcfcf;
  background: #f1f1f1;
  margin-top: 20rpx;
}

.infocon view.btn text {
  width: 49%;
  display: inline-block;
  text-align: center;
  padding: 10rpx 0rpx;
}

.infocon view.btn text.btn_c {
  border-right: 1rpx solid #cfcfcf;
}

.cen {
  border-bottom: 1rpx solid #e2e2e2;
}

.cen .tab {
  font-size: 28rpx;
  width: 50%;
  height: 88rpx;
  display: inline-block;
  text-align: center;
  line-height: 100rpx;
}

.cen text {
  height: 84rpx;
  display: block;
  width: 120rpx;
  margin: 0 auto;
}

.cen text.on {
  color: #ff6700;
  border-bottom: 4rpx solid #ff6700;
}

.sub .sub_item image {
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  vertical-align: top;
}

.sub .phonenum image {
  width: 34rpx;
}

.sub .sub_item image.tp {
  width: 120rpx;
}

.sub .sub_item {
  width: 90%;
  margin: 0 auto;
  border-bottom: 1rpx solid #e2e2e2;
  height: 40rpx;
  padding: 24rpx 0rpx;
}

.sub .sub_item input {
  display: inline-block;
  margin-left: 10rpx;
  width: 90%;
  font-size: 28rpx;
  height: 40rpx;
  line-height: 40rpx;
  margin-top: -5rpx;
}

.sub .yzm {
  border-bottom: none;
}

.sub .yzm input {
  width: 60%;
}

.sub .yzm text {
  font-size: 28rpx;
  display: inline-block;
  vertical-align: top;
}

.sub {
  padding-top: 20rpx;
  background: #eee;
}

.sub_con {
  background: #fff;
}

.info {
  background: #eee;
  height: 100%;
}

.contain {
  width: 92%;
  margin: 0 auto;
  padding-bottom: 400rpx;
}

.contain text {
  font-size: 28rpx;
  width: 100%;
}

.contain text.yh {
  color: #0a89c7;
}

.contain button {
  width: 100%;
  height: 80rpx;
  margin-top: 10rpx;
  border-radius: 10rpx;
  color: #fff;
  text-align: center;
  font-size: 28rpx;
  border: none;
}

.contain button.log {
  background: #c2c2c2;
  margin-top: 30rpx;
}

.contain button.login {
  background: #1aad18;
}

.contain button.findmm {
  background: #9bc45e;
  margin-bottom: 20rpx;
}

.dsf {
  position: relative;
  margin-top: 70rpx;
}

.dsf .h {
  width: 70%;
  height: 1rpx;
  background: #ccc;
  margin: 0 auto;
}

.dsf text {
  width: 300rpx;
  margin: 0 auto;
  display: block;
  color: #666;
  background: #dcdcdc;
  text-align: center;
  position: absolute;
  left: 0;
  right: 0;
  bottom: -20rpx;
}

.share {
  width: 200rpx;
  margin: 0 auto;
  margin-top: 40rpx;
}

.share view {
  width: 36rpx;
  height: 36rpx;
  float: left;
  margin-right: 40rpx;
}

.share view:last-child {
  margin-right: 0rpx;
}

.share view image {
  width: 36rpx;
  height: 36rpx;
}


.sendmsgafter{
  color: red;
}