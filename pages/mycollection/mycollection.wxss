.carts{width: 90%;margin: 0 auto;overflow: hidden}
.cart image{width: 240rpx;height: 240rpx;}
.cart:nth-child(2n){margin-right: 0rpx;} 
.cart{width: 44.5%;margin-right: 1%;font-size: 28rpx;border:1rpx solid #ddd;padding-bottom: 20rpx;padding: 15rpx;display: block; float: left;margin-top: 20rpx;}
.cart .cartprice{color: #ff6700;text-align: right;margin: 20rpx 0rpx;}
.cart .cartname{height: 80rpx;display: block;overflow: hidden}
.cart .del{background: #ddd;padding: 12rpx 30rpx;display: block;width:50%;text-align: center;margin: 0 auto;color: #666;}